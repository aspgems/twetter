<% fav = !@user.favorites.find_by_id(tweet.id).nil? %>
<tr class="hentry status <% fav ? "favorite" : "" %>u-<%= h tweet.user.username %><%= (tweet.user==@user) ? " mine" : "" %><%= ((type=='mine' && tweet_counter==0) || type=='friends_update') ? " latest-status":"" %>" id="status_<%= h tweet.id %>">
    <% if (type!='mine') %>
    <td class="thumb vcard author">
        <a href="/<%= h tweet.user.username %>" class="url"><img alt="<%= tweet.user.name %>" class="photo fn" height="48" src="<%= tweet.user.web_profile_url %>" width="48"/></a>
    </td>
    <% end %>
    <td class="status-body">
        <div>
            <% if (type!='mine') %>
            <strong><a href="/<%= h tweet.user.username %>" title="<%= tweet.user.name %>"><%= tweet.user.username %></a></strong>
            <% end %>
            <span class="entry-content"><%= link_users(tweet.tweet) %></span>
            <span class="meta entry-meta"><a href="/<%= h tweet.user.username %>/status/<%= h tweet.id %>" class="entry-date" rel="bookmark"><span class="published" title="<%= tweet.created_at_formatted %>"><%= time_ago_in_words(tweet.created_at) %>
                ago</span></a> <span>from <%= h tweet.source%></span>
                <% if (!tweet.recipient.nil?) then %>
             <a href="http://twitter.com/rob_nielsen/status/1014433331">in reply to <%= tweet.recipient.username %></a>
            <% end %>
            </span>
        </div>
    </td>
    <td class="actions">
        <div>
            <a class="fav-action <%= fav ? "" : "non-" %>fav" id="status_star_<%= h tweet.id %>" title="<%= fav ? "" : "un-" %>favorite this update">&nbsp;&nbsp;</a><a class="repl" href="/home?status=@<%= h tweet.user.username %>%20&amp;in_reply_to_status_id=<%= h tweet.id %>&amp;in_reply_to=<%= h tweet.user.username %>" title="reply to <%= h tweet.user.username %>">&nbsp;&nbsp;</a>
        </div>
    </td>
</tr>

